<form action="/" method="POST" encType="multipart/form-data">
  <h3>Upload Profile Photo</h3>
  <input type="file" name="sampleFile" accept="image/*" />
  <input type="submit" class="btn btn-primary">
</form>

<div class="card">

    {{#each rows}}

    {{#if this.profile_image}}

     <img src="{{this.profile_image}}" alt="user Profile" class="image">

     {{else}}

    <img src="/img/default.png" alt="user Profile" class="image">
    {{/if}}


    <h1 class="card__title">{{this.name}}</h1>
    <div class="card__job">{{this.job_title}}</div>
    <div class="card__about">{{this.description}}</div>
    <button type="button" class="btn btn-primary">View Profile</button>
      {{/each}}

</div>